section.genres
  include genres.data.pug

  .container-fluid
    .posters__link-wrapper
      +posters-link({
        label: 'Popular Genres',
        href: '#'
      })

    .row
      each genre in genres
        .col-12.col-sm-6.col-lg-3
          - var image = `${genre.label}.svg`;
          +genre({
            label: genre.label,
            icon: `../../components/genre/img/${image}`
          })(class=`genre_${genre.label}`)